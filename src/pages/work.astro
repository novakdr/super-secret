---
import Layout from '../layouts/Layout.astro';
import PageHeading from '../components/PageHeading.astro';
import Navigation from '../components/Navigation.astro';
import Header from '../components/Header.astro';
import WorkSection from '../components/WorkSection.astro';
---

<Layout pageTitle="Work | Dave Novak" hasFooter >
	<PageHeading imageLight="/images/work/work-heading-light.svg" imageDark="/images/work/work-heading-dark.svg" />
	<section class="container">
		<Navigation eyeColor="var(--color-accent-2)" addMarginEnd="--margin-end: var(--space-2xl);" hasHome />
		<article class="stack">
			<Header title="Work" subTitle="* Project available upon request" link="/images/pdf/DavidNovakResume.pdf" linkName="Resume"/>
			<WorkSection />
		<article/>
	</section>
</Layout>