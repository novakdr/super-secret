---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
import PageHeading from "../components/PageHeading.astro";
import Navigation from "../components/Navigation.astro";
---

<Layout pageTitle={frontmatter.title} hasFooter>
  <PageHeading
    imageLight="/images/odds&ends/odds-ends-heading-light.svg"
    imageDark="/images/odds&ends/odds-ends-heading-dark.svg"
  />
  <section class="container">
    <Navigation
      eyeColor="var(--color-accent-3)"
      addMarginEnd="--margin-end: var(--space-2xl);"
    />
    <article class="stack" style="--space: var(--space-l);">
      <div>
        <h1 class="display">{frontmatter.title}</h1>
        <div class="blog-info border-bottom">
          <p class="small-text">
            Published: <span class="underline">{frontmatter.pubDate}</span>
          </p>
          <p class="small-text">
            Listening: <a href={frontmatter.listeningTo.url} class="link"
              >{frontmatter.listeningTo.title}</a>
          </p>
        </div>
      </div>
      <slot />
    </article>
  </section>
</Layout>
